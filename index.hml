<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Connexion Facebook</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
  <h1>Bienvenue</h1>
  <p>Cliquez ci-dessous pour vous connecter avec Facebook :</p>
  <button onclick="loginWithFacebook()">Se connecter avec Facebook</button>

  <div id="status"></div>

  <!-- SDK Facebook -->
  <script async defer crossorigin="anonymous" 
    src="https://connect.facebook.net/fr_FR/sdk.js"></script>

  <script>
    // Initialiser le SDK Facebook
    window.fbAsyncInit = function() {
      FB.init({
        appId      : 'VOTRE_APP_ID', // ← à remplacer avec l'ID de ton app Facebook
        cookie     : true,
        xfbml      : true,
        version    : 'v19.0'
      });

      // Vérifie le statut de connexion actuel
      FB.getLoginStatus(function(response) {
        statusChangeCallback(response);
      });
    };

    // Réagit au statut de connexion
    function statusChangeCallback(response) {
      if (response.status === 'connected') {
        document.getElementById('status').innerHTML = 'Connecté à Facebook !';
      } else {
        document.getElementById('status').innerHTML = 'Non connecté.';
      }
    }

    // Lancer la connexion
    function loginWithFacebook() {
      FB.login(function(response) {
        if (response.authResponse) {
          console.log('Connexion réussie !', response);
          statusChangeCallback(response);
        } else {
          console.log('Connexion annulée.');
        }
      }, {scope: 'public_profile,email'});
    }
  </script>
</body>
</html>

